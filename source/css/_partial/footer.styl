#footer
  background: color-footer-background
  padding: 30px container-padding
  border-top: 1px solid color-border
  color: color-grey
  margin-top: 100px
  opacity: 0
  transition: opacity 0.2s ease-in
  &.open
    opacity: 1
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer-info
  margin-left: 50px
  line-height: line-height - 8
  .logo
    margin-bottom: 20px
  @media mq-mobile
    float: none
    margin-left: 0

#footer-star
  font-size: 20px
  padding: 20px 0
  @media mq-mobile
    display: none
